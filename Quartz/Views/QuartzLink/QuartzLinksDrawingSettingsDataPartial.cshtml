<div class="card-body" style="display:block;">

    <div class="row">
        <div class="col-lg-6">
            <span style="color: #8F8F95; font-size: 1em; font-weight:500 ">Drawing No</span>
            <input type="text" id="dsmDrawingNo" class="form-control">
        </div>

        <div class="col-lg-6">
            <span style="color: #8F8F95; font-size: 1em; font-weight:500 ">Select Drawing</span>
            <select id="dsmSelectDrawing" class="form-select" onblur='this.size=1;' onchange='this.size=1; this.blur();'>
            </select>
        </div>

    </div>

    <br />

    <div class="row">
        <div class="col-lg-6">
            <span style="color: #8F8F95; font-size: 1em; font-weight:500 ">Plant Area</span>
            <select class="form-select" id="dsmPlantArea">
            </select>
        </div>

        <div class="col-lg-6">
            <span style="color: #8F8F95; font-size: 1em; font-weight:500 ">Plant System</span>
            <select class="form-select" id="dsmPlantSystem">
            </select>
        </div>
    </div>

    <br />

    <div class="row">
        <div class="col-lg-12">
            <span style="color: #8F8F95; font-size: 1em; font-weight:500 ">Drawing Description</span>
            <input type="text" id="dsmDrawingDescription" class="form-control" placeholder="Description...">
        </div>
    </div>

    <br />

    <div class="row">
        <div class="col-lg-12 text-center">
            <button id="btnDsmUploadDrawing" type="button" class="btn btn-dark mt-4" style="border: none; border-radius: 20px;"><i class="fa fa-images">&nbsp;</i>Upload Drawing</button>
        </div>
    </div>

    <br />

    <!-- #region Upload Drawing Area -->
    <div class="row">
        <div class="text-center">
            <div id="dsmUploadDrawingArea" class="row" hidden>
                <div class="col-lg-12">
                    <label for="dsmUploadDrawing" style="border-radius: 20px;" class="btn btn-dark">Choose</label>
                    <input id="dsmUploadDrawing" type="file" oninput="if (this.files[0].type == 'image/jpeg') { dsmSelectedImage.src = window.URL.createObjectURL(this.files[0]); $('#dsmSelectedImage').removeAttr('hidden'); }" hidden>
                    <button type="button" class="btn btn-dark" style="border-radius: 20px; color: white;" onclick="uploadFile('drawingSettings')">Upload</button>
                </div>

                <br />

                <div class="row mt-3">
                    <div class="col-lg-12">
                        <p class="dsmSelectedDrawing"></p>
                        <img class="mx-auto" id="dsmSelectedImage" style="width: 150px; height: 100px;" hidden />
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- #endregion -->

</div>
        function showSignUpPassword(type) {
            switch (type) {
                case "password":
                    var password = $("#signUpPassword");
                    if (password.attr("type") == "password") {
                        password.attr("type", "text");
                        $("#signUpPasswordEye").removeClass("fa-eye").addClass("fa-eye-slash");
                    }
                    else {
                        password.attr("type", "password");
                        $("#signUpPasswordEye").removeClass("fa-eye-slash").addClass("fa-eye");
                    }
                    break;

                case "confirmPassword":
                    var password = $("#signUpConfirmPassword");
                    if (password.attr("type") == "password") {
                        password.attr("type", "text");
                        $("#signUpConfirmPasswordEye").removeClass("fa-eye").addClass("fa-eye-slash");
                    }
                    else {
                        password.attr("type", "password");
                        $("#signUpConfirmPasswordEye").removeClass("fa-eye-slash").addClass("fa-eye");
                    }
                    break;

                default:
            }

        }
    </script>


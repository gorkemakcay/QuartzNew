<div class="card-body p-0" style="display:block;">
    <table id="itemAttachmentsTable" class="table table-hover text-sm table-responsive-sm table-sm">
        <thead class="no-border" style="background-color:#C9D6DF;color:#1B262C;font-weight:600">
            <tr>
                <th class="text-sm text-center" style="font-weight:500">Name</th>
                <th class="text-sm text-center" style="font-weight:500">Type</th>
                <th class="text-sm text-center" style="font-weight:500">Uploaded By</th>
                <th class="text-sm text-center" style="font-weight:500">Uploaded Date</th>
                <th class="text-sm text-center" style="font-weight:500">Options</th>
            </tr>
        </thead>

        <tbody>
        </tbody>
    </table>

    <div class="row">
        <div class="text-center">
            <br />
            <div id="" class="row">
                <div class="col-lg-12">
                    <label for="itemModalUploadFile" style="border-radius: 20px;" class="btn btn-dark"><i class="fa fa-folder"></i>&nbsp; Choose File</label>
                    <input id="itemModalUploadFile" type="file" oninput="if (this.files[0].type == 'image/jpeg') { itemModalAttachmentSelectedImage.src = window.URL.createObjectURL(this.files[0]); $('#itemModalAttachmentSelectedImage').removeAttr('hidden'); }" hidden>
                    <button type="button" class="btn btn-dark" style="border-radius: 20px; color: white;" onclick="uploadFile('item')"><i class="fa fa-upload"></i>&nbsp; Upload</button>
                </div>
            </div>
            <br />
            <div class="row text-center">
                <p id="itemModalAttachmentSelectedFile"></p>
                <img class="mx-auto" id="itemModalAttachmentSelectedImage" style="width: 150px; height: 100px;" hidden />
            </div>
        </div>
    </div>
</div>